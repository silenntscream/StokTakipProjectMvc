
@{
    ViewBag.Title = "Index";
    Layout = null;
}



<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <div class="container d-flex align-items-center justify-content-center" style="height: 100vh;">
        <div class="card shadow rounded-4" style="width: 400px;">
            <div class="card-body p-4">
                <h3 class="card-title text-center mb-4">🔐 Giriş Yap</h3>

                @if (ViewBag.Eror != null)
                {
                    <div class="alert alert-danger text-center">@ViewBag.Eror</div>
                }

                @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                {
                    <div class="mb-3">
                        <label for="UserName" class="form-label">Kullanıcı Adı</label>
                        @Html.TextBox("UserName", null, new { @class = "form-control", placeholder = "Kullanıcı Adınızı Girin" })
                    </div>

                    <div class="mb-3">
                        <label for="Password" class="form-label">Şifre</label>
                        <div class="input-group">
                            @Html.Password("Password", null, new { @class = "form-control", id = "passwordInput", placeholder = "Şifrenizi Girin" })
                            <button class="btn btn-outline-secondary" type="button" onclick="togglePassword()">👁</button>
                        </div>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary rounded-pill">Giriş Yap</button>
                    </div>
                }
            </div>
        </div>
    </div>

    <script>
        function togglePassword() {
            const passwordInput = document.getElementById("passwordInput");
            passwordInput.type = passwordInput.type === "password" ? "text" : "password";
        }
    </script>

</body>
</html>
