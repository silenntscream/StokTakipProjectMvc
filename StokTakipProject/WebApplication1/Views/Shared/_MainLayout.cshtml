
@{
    var userRole = Session["UserRole"] as string;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
</head>
<body class ="d-flex flex-column min-vh-100">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">🛒 MVC STOK TAKİP</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/Kategori/Index">📂 Kategoriler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Urun/Index">📦 Ürünler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Musteri/Index">👥 Müşteriler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Satis/YeniSatis">💸 Satış</a>
                    </li>

                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/addUser/Index">👤 Kullanıcı Ekle</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Raporlama/Index">📊 Raporlama</a>
                        </li>
                    }
                </ul>

                <ul class="navbar-nav ms-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <span class="navbar-text text-white me-3">
                                👋 Hoş geldin, @User.Identity.Name
                            </span>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-light btn-sm rounded-pill" href="/Login/Logout">Çıkış Yap</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="btn btn-outline-light btn-sm rounded-pill" href="/Login/Index">Giriş Yap</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>


    <div class="container">
        @RenderBody()
    </div>

    <footer class="mt-auto bg-dark text-light py-3">
        <div class="container text-center">
            <p class="mb-1">© @DateTime.Now.Year MVC Stok Takip</p>
            <p class="mb-0">
                Sürüm 1.0 | <a href="mailto:destek@stoktakip.com" class="text-decoration-none text-warning">Destek</a>
            </p>
        </div>
    </footer>
    </body>
</html>

