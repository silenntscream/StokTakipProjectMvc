@model List<WebApplication1.Models.SonSatisViewModel>

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">👋 Hoş geldiniz, @User.Identity.Name</h2>

    <div class="row g-3">
        <div class="col-md-3">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <h5 class="card-title">📦 Ürünler</h5>
                    <p class="card-text display-6">@ViewBag.UrunSayisi</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <h5 class="card-title">👥 Müşteriler</h5>
                    <p class="card-text display-6">@ViewBag.MusteriSayisi</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <h5 class="card-title">💸 Bugünkü Satış</h5>
                    <p class="card-text display-6">@ViewBag.BugunkuSatis</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <h5 class="card-title">📊 En Çok Satan</h5>
                    <p class="card-text">@ViewBag.EnCokKategori</p>
                </div>
            </div>
        </div>
    </div>

    <hr class="my-4" />

    <h4>📝 Son Satışlar</h4>
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Ürün</th>
                <th>Müşteri</th>
                <th>Tutar</th>
                <th>Tarih</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.UrunAdi</td>
                <td>@item.MusteriAdi</td>
                <td>@item.Tutar ₺</td>
                <td>@item.Tarih.ToShortDateString()</td>
            </tr>
            }
        </tbody>
    </table>
</div>
